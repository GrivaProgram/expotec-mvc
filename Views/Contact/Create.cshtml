@model expotec_mvc.Models.Contact

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1 class="text-center">Crear Contacto</h1>

    <h4 class="mt-4">Datos del Contacto</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nombre -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- DNI -->
                <div class="mb-3">
                    <label asp-for="Dni" class="form-label fw-bold"></label>
                    <input asp-for="Dni" class="form-control" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>

                <!-- Teléfono -->
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-bold"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <!-- RUC de la empresa -->
                <div class="mb-3">
                    <label asp-for="Ruc" class="form-label fw-bold"></label>
                    <input asp-for="Ruc" class="form-control" />
                    <span asp-validation-for="Ruc" class="text-danger"></span>
                </div>

                <!-- Cargo en la empresa -->
                <div class="mb-3">
                    <label asp-for="Position" class="form-label fw-bold"></label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>

                <!-- Botón de envío -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-link">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
